<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ("../partials/head.ejs") %>
  </head>
  <body>
    <nav>
      <%- include ("../partials/nav.ejs") %>
    </nav>
    <div class="container">


      <h1>Product Show Page</h1>
      <h3><%=product.name%></h3>
        <img src="<%=product.img%>" alt="An image of <%=product.name%>" />
        <p><%=product.description%></p>
        <% if(product.qty <=0) { %>
          <h4>Currently Unavailable</h4>
        <% } else { %>
          <h6>Only <%=product.qty%> remaining</h6>
          <form action="/products/<%=product.id%>/buy?_method=put" method="POST">
            <button type="submit" class="buy-button">BUY</button>
          </form>
        <% } %>
          <h4>Price: $<%=product.price%></h4>
    </div>
    <div class="admin-actions">
      <a href="/products/<%product.id%>/edit"><button type="button" name="button" class="edit-button">Edit</button></a>
      <form action="/products/<%=product.id%>?_method=DELETE" method="POST">
        <button type="submit" class="delete-button">DELETE</button>
      </form>
    </div>
    <nav class="home">
      <a href="/products#top" alt="top">Back to the Home Page</a>
    </nav>
      <br><br>
    <%- include ("../partials/footer.ejs") %>
    <!-- <%- include ("../partials/footer") %> -->
    <!-- <%- include ("../partials/footer") %> -->
  </body>
</html>
